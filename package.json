{
  "name": "pinpoint",
  "version": "1.0.0",
  "description": "universal dom inspection tool for capturing stable css selectors on any web page",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "npm run build && npm run test:unit && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.268",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "jsdom": "^27.2.0",
    "playwright": "^1.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "chrome-extension",
    "dom-inspection",
    "css-selectors",
    "web-development",
    "developer-tools"
  ],
  "author": "MODiE",
  "license": "MIT"
}
